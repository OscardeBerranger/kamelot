{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
{% for user in users %}
    <div class="container">
        <div class="row">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"> {{ user.email }} </h5>
                    {% if 'ROLE_ADMIN' in user.roles %}
                            <a href="{{ path('app_user_demote', {id: user.id}) }}" class="btn btn-warning">demote</a>
                        {% else %}
                            <a href="{{ path('app_user_promote', {id: user.id}) }}" class="bnt btn-success">promote</a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
    {% endfor %}
{% endblock %}
